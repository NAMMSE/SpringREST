<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.restful.mapper.PizzaMapper">
   
  <!-- 0817 강사님 -->
   <select id="get" resultType="com.ezen.restful.dto.Pizza">
   		select * from pizza where id = #{pk}
   </select>
   
   <update id="updateView">
   		update pizza set calrories = calrories + 1 where id = #{pk}
   </update>
   
   <update id="updatePizza">
   		update pizza set name = #{name}, price = #{price}, calrories= #{calrories} where id = #{id}
   </update>
   
   <!-- 0818 강사님 문제풀이 -->
   <select id="getAll" resultType="com.ezen.restful.dto.Pizza">
   		select * from pizza
   </select>
   
   <update id="update">
   		update pizza set name = #{name}, price = #{price}, calrories = #{calrories} where id = #{id}
   </update>
   
   <insert id="addPizza">
   		insert into pizza values(pizza_id_seq.nextval, #{name}, #{price}, #{calrories})
   </insert>
 
</mapper>